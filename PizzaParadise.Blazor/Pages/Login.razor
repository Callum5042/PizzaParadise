@page "/login"
@using PizzaParadise.Blazor.Data

<div class="d-flex flex-row justify-content-center">
    <div class="card w-50">
        <EditForm Model="@LoginModel" OnValidSubmit="@SubmitLoginForm">
            <DataAnnotationsValidator />

            <h5 class="card-header">
                Login
            </h5>

            <div class="card-body">

                <div class="row">
                    <div class="form-group">
                        <label>Email Address</label>
                        <InputText @bind-Value="LoginModel.EmailAddress" class="form-control" />
                        <ValidationMessage For="() => LoginModel.EmailAddress" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label>Password</label>
                        <InputText @bind-Value="LoginModel.Password" class="form-control" />
                        <ValidationMessage For="() => LoginModel.Password" />
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

            </div>

        </EditForm>
    </div>
</div>

@code {
    private LoginModel LoginModel { get; set; } = new LoginModel();

    private void SubmitLoginForm()
    {

    }
}
